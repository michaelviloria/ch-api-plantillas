extends layout/main

block content
  main(class="container-lg p-3")
    section(class="row justify-content-around")
      if response
        h1(class="col-12 text-center mb-4") Producto Eliminado
        article(class="col-8 col-md-6 col-lg-3 d-flex flex-column p-2 text-center card border-success")
          img(class="img-fluid rounded" src=response.deleted.imagen, alt=response.deleted.nombre)
          h3(class="text-sencondary")=response.deleted.nombre
          b(class="my-1")="$ " + response.deleted.precio
      else 
        h4(class="text-center") El producto con el id especificado no ha sido encontrado